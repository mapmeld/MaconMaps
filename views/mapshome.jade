          div.span8.well#osmgoogle(style="font-family:courier;")
            span map = new google.maps.Map(document.getElementById("map"), { mapTypeControlOptions:{ mapTypeIds:[google.maps.MapTypeId.ROADMAP, google.maps.MapTypeId.SATELLITE, 'MapQuest'] } });
            br
            span osmLayer = new google.maps.ImageMapType({
            br
            span &nbsp;&nbsp;getTileUrl: function(coord, zoom){
            br
            span.mapquesturl &nbsp;&nbsp;&nbsp;&nbsp;return "http://otile1.mqcdn.com/tiles/1.0.0/osm/" + zoom + "/" + coord.x + "/" + coord.y + ".jpg";
            span.skobblerurl(style="display:none;") &nbsp;&nbsp;&nbsp;&nbsp;return "http://tiles1.skobbler.net/osm_tiles2/" + zoom + "/" + coord.x + "/" + coord.y + ".png";
            span.stamenurl(style="display:none;") &nbsp;&nbsp;&nbsp;&nbsp;return "http://a.tile.stamen.com/toner/" + zoom + "/" + coord.x + "/" + coord.y + ".png";
            span.mapnikurl(style="display:none;") &nbsp;&nbsp;&nbsp;&nbsp;return "http://a.tile.openstreetmap.org/" + zoom + "/" + coord.x + "/" + coord.y + ".png";
            br
            span &nbsp;&nbsp;},
            br
            span &nbsp;&nbsp;tileSize: new google.maps.Size(256, 256),
            br
            span &nbsp;&nbsp;isPng: false,
            br
            span &nbsp;&nbsp;alt: "OpenStreetMap",
            br
            span &nbsp;&nbsp;name: "OpenStreetMap",
            br
            span &nbsp;&nbsp;maxZoom: 19
            br
            span });
            br
            span map.mapTypes.set('OpenStreetMap', osmLayer);
          div.span8.well#esrijs(style="display:none;font-family:courier;")
            span osmLayer = new esri.layers.OpenStreetMapLayer({
            br
            span.mapquesturl &nbsp;&nbsp;tileServers: [ "http://otile1.mqcdn.com/tiles/1.0.0/osm/" ]
            span.skobblerurl(style="display:none;") &nbsp;&nbsp;tileServers: [ "http://tiles1.skobbler.net/osm_tiles2/" ]
            span.stamenurl(style="display:none;") &nbsp;&nbsp;tileServers: [ "http://a.tile.stamen.com/toner/" ]
            span.mapnikurl(style="display:none;") &nbsp;&nbsp;tileServers: [ "http://a.tile.openstreetmap.org/" ]
            br
            span });
            br
            span map.addLayer(osmLayer);
            br
