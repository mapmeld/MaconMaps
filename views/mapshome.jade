            br
            span map.addLayer( osmLayer );
            br
          div.span8.well#mapbox(style="display:none;font-family:courier;")
            span.mapquesturl m.addLayer(new MM.TemplatedLayer('http://otile1.mqcdn.com/tiles/1.0.0/osm/{Z}/{X}/{Y}.jpg'));
            span.skobblerurl(style="display:none;") m.addLayer(new MM.TemplatedLayer('http://tiles1.skobbler.net/osm_tiles2/{Z}/{X}/{Y}.png'));
            span.stamenurl(style="display:none;") m.addLayer(new MM.TemplatedLayer('http://a.tile.stamen.com/toner/{Z}/{X}/{Y}.png'));
            span.mapnikurl(style="display:none;") m.addLayer(new MM.TemplatedLayer('http://a.tile.openstreetmap.org/{Z}/{X}/{Y}.png'));
            br
            span m.ui.attribution.add()
