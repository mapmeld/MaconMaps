            span.skobblerurl(style="display:none;") &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;fx:String&gt;http://tiles1.skobbler.net/osm_tiles2/&lt;/fx:String&gt;
            span.stamenurl(style="display:none;") &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;fx:String&gt;http://a.tile.stamen.com/toner/&lt;/fx:String&gt;
            span.mapnikurl(style="display:none;") &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;fx:String&gt;http://a.tile.openstreetmap.org/&lt;/fx:String&gt;
            br
            span &nbsp;&nbsp;&nbsp;&nbsp;&lt;/esri:tileServers&gt;
            br
            span &nbsp;&nbsp;&lt;/esri:OpenStreetMapLayer&gt;
            br
            span &lt;/esri:Map&gt;
            br

          div.span8.well#leaflet(style="display:none;font-family:courier;")
            span L.tileLayer( '
            span.mapquesturl(style="display:inline;") http://otile1.mqcdn.com/tiles/1.0.0/osm/{z}/{x}/{y}.jpg
            span.skobblerurl(style="display:none;") http://tiles1.skobbler.net/osm_tiles2/{z}/{x}/{y}.png
            span.stamenurl(style="display:none;") http://a.tile.stamen.com/toner/{z}/{x}/{y}.png
            span.mapnikurl(style="display:none;") http://a.tile.openstreetmap.org/{z}/{x}/{y}.png
            span ' ).addTo(map);
            br
          div.span8.well#openlayers(style="display:none;font-family:courier;")
            span.mapquesturl osmLayer = new OpenLayers.Layer.OSM( "MapQuest", ["http://otile1.mqcdn.com/tiles/1.0.0/osm/${z}/${x}/${y}.jpg"] );
            span.skobblerurl(style="display:none;") osmLayer = new OpenLayers.Layer.OSM( "Skobbler", ["http://tiles1.skobbler.net/osm_tiles2/${z}/${x}/${y}.png"] );
            span.stamenurl(style="display:none;") osmLayer = new OpenLayers.Layer.OSM( "Stamen", ["http://a.tile.stamen.com/toner/${z}/${x}/${y}.png"] );
